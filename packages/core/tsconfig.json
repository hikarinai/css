{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2015",
    "outDir": "./src/js",
    "rootDir": "./src/ts",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": ["./src/ts/**/*"],
  "exclude": ["node_modules"]
}
